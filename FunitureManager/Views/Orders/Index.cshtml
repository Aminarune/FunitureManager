@model IEnumerable<FunitureManager.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Order List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.User_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.User.User_Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            if (item.Status == "Pending")
            {
            
                <button class="btn btn-success btn-update-status" type="submit" data-id="@item.Id">@Html.ActionLink("Pending", "Index", new { id = item.Id, status = "Pending" })</button>
                <button class="btn btn-danger btn-cancel" type="submit" data-id="@item.Id">@Html.ActionLink("Delivering", "Index", new { id = item.Id, status = "Delivering" })</button>
                <button class="btn btn-danger btn-cancel" type="submit" data-id="@item.Id">@Html.ActionLink("Completed", "Index", new { id = item.Id, status = "Completed" })</button>
            }
            else if (item.Status == "Delivering")
            {
                <button class="btn btn-danger btn-cancel" type="submit" data-id="@item.Id">@Html.ActionLink("Pending", "Index", new { id = item.Id, status = "Pending" })</button>
                <button class="btn btn-success btn-update-status" type="submit" data-id="@item.Id">@Html.ActionLink("Delivering", "Index", new { id = item.Id, status = "Delivering" })</button>
                <button class="btn btn-danger btn-cancel" type="submit" data-id="@item.Id">@Html.ActionLink("Completed", "Index", new { id = item.Id, status = "Completed" })</button>
            }
            else if (item.Status == "Completed")
            {
                <button class="btn btn-danger btn-cancel" type="submit" data-id="@item.Id">@Html.ActionLink("Pending", "Index", new { id = item.Id, status = "Pending" })</button>
                <button class="btn btn-danger btn-cancel" type="submit" data-id="@item.Id">@Html.ActionLink("Delivering", "Index", new { id = item.Id, status = "Delivering" })</button>
                <button class="btn btn-success btn-update-status" type="submit" data-id="@item.Id">@Html.ActionLink("Completed", "Index", new { id = item.Id, status = "Completed" })</button>
            }
            else
            {
                <button class="btn btn-danger btn-cancel" type="submit" data-id="@item.Id">@Html.ActionLink("Pending", "Index", new { id = item.Id, status = "Pending" })</button>
                <button class="btn btn-danger btn-cancel" type="submit" data-id="@item.Id">@Html.ActionLink("Delivering", "Index", new { id = item.Id, status = "Delivering" })</button>
                <button class="btn btn-danger btn-cancel" type="submit" data-id="@item.Id">@Html.ActionLink("Completed", "Index", new { id = item.Id, status = "Completed" })</button>
            }
        }
        </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.Id })
    </td>
    <td>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            
            <div class="form-group">
                <div class="form-actions no-color">
                    <input type="submit" value="Change Status" class="btn btn-default" />
                </div>
            </div>
        }


    </td>
    <td>
        
    </td>
</tr>     
}

</table>
